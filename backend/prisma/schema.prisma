generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String
  age       Int
  hobbies   String[]        @default([])
  createdAt DateTime        @default(now())
  // friendships are modeled through the Friendship join table
  FriendA   Friendship[]    @relation("a_friend")
  FriendB   Friendship[]    @relation("b_friend")
  @@index([username])
}

model Friendship {
  id       String @id @default(uuid())
  userAId  String
  userBId  String
  userA    User   @relation("a_friend", fields: [userAId], references: [id])
  userB    User   @relation("b_friend", fields: [userBId], references: [id])

  @@unique([userAId, userBId])
}
